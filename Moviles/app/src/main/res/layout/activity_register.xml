<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_neon_background"
    tools:context=".RegisterActivity">

    <!-- Elementos decorativos de fondo -->
    <View
        android:id="@+id/decoration1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:background="@color/secondary_neon"
        android:alpha="0.1"
        android:rotation="60"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="-90dp"
        android:layout_marginEnd="-90dp" />

    <View
        android:id="@+id/decoration2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@color/accent_neon"
        android:alpha="0.1"
        android:rotation="-45"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="-60dp"
        android:layout_marginStart="-60dp" />

    <!-- Botón de regreso -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBackClose"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_left_24"
        app:backgroundTint="@color/background_glass"
        app:tint="@color/text_neon"
        app:fabSize="normal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Header principal -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/pokemon_logo"
            android:alpha="0.9" />

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREAR CUENTA"
            android:textColor="@color/text_primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:shadowColor="@color/secondary_neon"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="10dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Únete a la comunidad Pokémon"
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:alpha="0.8" />

        <!-- Línea decorativa -->
        <View
            android:layout_width="60dp"
            android:layout_height="2dp"
            android:background="@color/secondary_neon"
            android:layout_marginTop="12dp" />

    </LinearLayout>

    <!-- Formulario de registro -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@color/text_neon"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_neon"
            android:hint="Correo electrónico"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="20dp" />

        <!-- Campo de contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textColor="@color/text_neon"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="Contraseña"
            android:background="@drawable/edit_text_neon"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="20dp" />

        <!-- Campo de confirmar contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONFIRMAR CONTRASEÑA"
            android:textColor="@color/text_neon"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtPassword2"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="Repetir contraseña"
            android:background="@drawable/edit_text_neon"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="30dp" />

    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón de registro -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="REGISTRAR"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_neon_primary"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="15dp" />

        <!-- Botón de login -->
        <Button
            android:id="@+id/btnLoginUser"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="YA TENGO UNA CUENTA"
            android:textColor="@color/text_neon"
            android:background="@drawable/button_neon_secondary"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Elemento decorativo flotante -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:alpha="0.1"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokebola"
        app:tint="@color/secondary_neon" />

</androidx.constraintlayout.widget.ConstraintLayout>
