<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_neon_background"
    tools:context=".LoginActivity">

    <!-- Elementos decorativos de fondo -->
    <View
        android:id="@+id/decoration1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@color/primary_neon"
        android:alpha="0.1"
        android:rotation="45"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="-100dp"
        android:layout_marginStart="-100dp" />

    <View
        android:id="@+id/decoration2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@color/secondary_neon"
        android:alpha="0.1"
        android:rotation="-30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="-75dp"
        android:layout_marginEnd="-75dp" />

    <!-- Header principal -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Logo principal -->
        <ImageView
            android:id="@+id/imgPokemonLogo"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginBottom="20dp"
            app:srcCompat="@drawable/pokemon_logo"
            android:alpha="0.9" />

        <!-- Título de la app -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POKE MATCHER"
            android:textColor="@color/text_primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.1"
            android:shadowColor="@color/primary_neon"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="6"
            android:layout_marginBottom="10dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encuentra tu Pokémon perfecto"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:alpha="0.8" />

        <!-- Línea decorativa -->
        <View
            android:layout_width="80dp"
            android:layout_height="3dp"
            android:background="@color/accent_neon"
            android:layout_marginTop="15dp" />

    </LinearLayout>

    <!-- Formulario de login -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Campo de email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textColor="@color/text_neon"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/edit_text_neon"
            android:hint="@string/user_email"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="20dp" />

        <!-- Campo de contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CONTRASEÑA"
            android:textColor="@color/text_neon"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="5dp" />

        <EditText
            android:id="@+id/edtPassword"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="textPassword"
            android:hint="@string/user_password"
            android:background="@drawable/edit_text_neon"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:paddingHorizontal="20dp"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="30dp" />

    </LinearLayout>

    <!-- Botones de acción -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Botón de login -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/start_session"
            android:textColor="@color/text_primary"
            android:background="@drawable/button_neon_primary"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="monospace"
            android:layout_marginBottom="15dp" />

        <!-- Botón de registro -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="@string/register_me"
            android:textColor="@color/text_neon"
            android:background="@drawable/button_neon_secondary"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:fontFamily="monospace" />

    </LinearLayout>

    <!-- Elemento decorativo flotante -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:alpha="0.1"
        android:rotation="180"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pokebola"
        app:tint="@color/primary_neon" />

</androidx.constraintlayout.widget.ConstraintLayout>
